<h3>Free &amp; For Sale</h3>

<p class="header">Recent Sale Posts</p> <!-- Add link to see all sale posts -->
<table>
  <tr>
    <td></td>
    <td>Name</td>
    <td>Asking price</td>
    <td>Last edited</td>
  </tr>
  <% @all_sale_posts[0..4].each do |post| %>
    <tr>
      <td><%= link_to "Post", post, :class => "button", :method => get %></td>
      <td><%= "#{post.name}" %></td>
      <td><%= "#{post.price}" %></td>
      <td><%= "#{post.updated_at}" %></td>
    </tr>
  <% end %>
</table>

