<h3>Free &amp; For Sale</h3>

<%= button_to "User", show_path(id: current_user.id), :class => "button medium", :method => :get %>

<p class="header">Recent Sale Posts</p> <!-- Add link to see all sale posts -->
<table>
  <tr>
    <td></td>
    <td>Name</td>
    <td>Asking price</td>
    <td>Last edited</td>
  </tr>
  <% @all_sale_posts[0..4].each do |post| %>
    <tr>
      <% render post %>
    </tr>
  <% end %>
</table>

<p class="header">Recent Buy Posts</p> <!-- Add link to see all buy posts -->
<table>
  <tr>
    <td></td>
    <td>Name</td>
    <td>Bidding price</td>
    <td>Last edited</td>
  </tr>
  <% @all_buy_posts[0..4].each do |post| %>
    <% render post %>
  <% end %>
</table>