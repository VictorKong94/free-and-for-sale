<h3 class="center">Free &amp; For Sale</h3>
<br />
<div>
<h5 class="center-align">
<div class="row">     
  <div class="col s6">
    <div class="center">
      <% if current_user %>
        <%= link_to "See all Sale Posts", sale_posts_path, :class => "btn btn-default inline", :method => "get" %>
        <%= link_to "Create a Sale Post", new_sale_post_path, :class => "btn btn-default", :method => "get" %>
      <% else %>
        <%= link_to "See all Sale Posts", sale_posts_path, :class => "btn btn-default", :method => "get" %>
      <% end %>
    </div>
    <br />
    <p class="header">Recent Sale Posts</p>
    <table>
      <tr>
        <td></td>
        <td>Name</td>
        <td>Asking price</td>
        <td>Last edited</td>
      </tr>
      <% @all_sale_posts[0..4].each do |post| %>
        <tr>
          <%= render post %>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="col s6">
    <div class="center">
      <% if current_user %>
        <%= link_to "See all Buy Posts", buy_posts_path, :class => "btn btn-default inline", :method => "get" %>
        <%= link_to "Create a Buy Post", new_buy_post_path, :class => "btn btn-default", :method => "get" %>
      <% else %>
        <%= link_to "See all Sale Posts", sale_posts_path, :class => "btn btn-default", :method => "get" %>
      <% end %>
    </div>
    <br />
    <p class="header">Recent Buy Posts</p>
    <table>
      <tr>
        <td></td>
        <td>Name</td>
        <td>Bidding price</td>
        <td>Last edited</td>
      </tr>
      <% @all_buy_posts[0..4].each do |post| %>
        <tr>
          <%= render post %>
        </tr>
      <% end %>
    </table>
  </div>
</div>